@page
@model DB.Pages.Animals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Animals</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].ClimatZone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].DietType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].EnclosureNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].DateJoined)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].NeedsRelocation)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Animal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClimatZone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DietType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnclosureNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateJoined)
            </td>
            <td class="check">
                @Html.DisplayFor(modelItem => item.NeedsRelocation)
            </td>
        </tr>
}
    </tbody>
</table>
