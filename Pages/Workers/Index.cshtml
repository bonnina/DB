@page
@model DB.Pages.Workers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Workers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].Occupation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].Payrate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].DateJoined)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Worker) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occupation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payrate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateJoined)
            </td>
        </tr>
}
    </tbody>
</table>
